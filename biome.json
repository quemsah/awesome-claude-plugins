{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!.next", "!build", "!next-env.d.ts", "!out", "!src/data", "**"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 140,
    "attributePosition": "auto",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "expand": "auto",
    "useEditorconfig": true,
    "includes": ["**", "!.next", "!build", "!next-env.d.ts", "!out", "!src/data", "**"]
  },
  "linter": {
    "enabled": true,
    "domains": {
      "project": "recommended",
      "next": "recommended",
      "react": "recommended",
      "test": "recommended"
    },
    "rules": {
      "recommended": true,
      "a11y": {
        "noAriaUnsupportedElements": "warn",
        "useAltText": "warn",
        "useAriaPropsForRole": "warn",
        "useAriaPropsSupportedByRole": "warn",
        "useValidAriaProps": "warn",
        "useValidAriaValues": "warn"
      },
      "complexity": {
        "noUselessStringConcat": "error",
        "noVoid": "error",
        "useSimplifiedLogicExpression": "error"
      },
      "correctness": {
        "noChildrenProp": "error",
        "noGlobalDirnameFilename": "error",
        "noNestedComponentDefinitions": "error",
        "noReactPropAssignments": "error",
        "noRenderReturnValue": "error",
        "noUndeclaredDependencies": "error",
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error",
        "useJsxKeyInIterable": "error"
      },
      "nursery": {
        "noDuplicatedSpreadProps": "error",
        "noEmptySource": "error",
        "noLeakedRender": "error",
        "noMultiStr": "error",
        "noNextAsyncClientComponent": "error",
        "noUselessCatchBinding": "error",
        "useArraySortCompare": "error",
        "useConsistentArrowReturn": "error",
        "useFind": "error",
        "useSortedClasses": "error"
      },
      "performance": {
        "noImgElement": "error",
        "noUnwantedPolyfillio": "warn",
        "useGoogleFontPreconnect": "warn",
        "useTopLevelRegex": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "error",
        "noDangerouslySetInnerHtmlWithChildren": "error"
      },
      "style": {
        "noCommonJs": "error",
        "noHeadElement": "warn",
        "noNamespace": "error",
        "useArrayLiterals": "error",
        "useAsConstAssertion": "error",
        "useConst": "error",
        "useFilenamingConvention": "error",
        "useNamingConvention": "error",
        "useObjectSpread": "error",
        "useReactFunctionComponents": "warn",
        "useSelfClosingElements": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noCommentText": "error",
        "noDocumentImportInPage": "error",
        "noDuplicateJsxProps": "error",
        "noExplicitAny": "error",
        "noExtraNonNullAssertion": "error",
        "noHeadImportInDocument": "error",
        "noMisleadingInstantiator": "error",
        "noMisplacedAssertion": "error",
        "noNonNullAssertedOptionalChain": "error",
        "noUnassignedVariables": "error",
        "noUnsafeDeclarationMerging": "error",
        "noVar": "error",
        "useGoogleFontDisplay": "warn",
        "useNamespaceKeyword": "error"
      }
    },
    "includes": ["**", "!.next", "!build", "!next-env.d.ts", "!out", "!src/data", "**"]
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "quoteStyle": "single",
      "attributePosition": "auto",
      "bracketSpacing": true
    },
    "globals": []
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedProperties": "on"
      }
    }
  }
}
